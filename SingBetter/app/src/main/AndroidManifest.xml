<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inyourface.singbetter">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="com.inyourface.singbetter.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.inyourface.singbetter.NoteSelectActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.inyourface.singbetter.RecordedSessions.SessionsViewActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.inyourface.singbetter.RecordedSessions.ItemView.ItemActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden">
        </activity>

    </application>
</manifest>