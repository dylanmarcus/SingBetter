<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/background"/>

    <TextView
        android:id="@+id/freq_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"
        android:text="Main View"
        android:textColor="#000"  />

    <TextView
        android:id="@+id/current_note_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/freq_text"
        android:text="@string/current_note_text"
        android:textColor="#000" />

    <RelativeLayout
        android:id="@+id/InnerRelativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/history_view_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="goToHistoryView"
            android:text="History" />


        <Button
            android:id="@+id/note_select_view_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:onClick="goToNoteSelectActivity"
            android:text="Select note" />

        <!-- record button -->
        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/toggle_button_record"
            android:textOff="Record"
            android:textOn="Stop"
            android:background="@drawable/record_button"
            android:onClick="changeRecordState" />

    </RelativeLayout>

    <TextView
        android:id="@+id/desired_note_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freq_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="151dp"
        android:text="C"
        android:textSize="70dp"
        android:textColor="#000" />

    <!-- record pitch in Hz and display as an array -->
    <TextView
        android:id="@+id/record_array_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="440dp"
        android:text="array"
        android:textSize="20dp"
        android:textColor="#000" />

</RelativeLayout>
