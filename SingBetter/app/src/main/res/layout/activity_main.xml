            android:background="@color/eggShell">
        </View>

        <TextView
            android:id="@+id/selected_note_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="50%"
